public class EVA1_10_Funciones {

    /**
     * @param args the command line arguments
     */
    static int x=10;
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner puto = new Scanner(System.in);
        double dBase, dAltura;
        System.out.println("introduce la base puto");
        dBase = puto.nextDouble();
        
        System.out.println("introduce la altura puto");
        dAltura = puto.nextDouble();
         double area = ((dBase*dAltura) /2);
         System.out.println("el area es "+area);
       double area2 = calcularArea(dBase, dAltura); 
        System.out.println(""+ area2);
       
    }
public static double calcularArea(double dBase, double dAltura)
{
//implementacion de la funcion
        double area = (dBase*dAltura)/2;


return area; 
}    
}
